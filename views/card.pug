extends layout.pug

block content
    section.flashcards
        .card.card-question
            .card-header
            h1.card-title Question
            #content
                h2= text
                if hint
                    p#hint
                        i Hint: #{hint}
            .card-flip-wrap
                a(href=`/cards/${id}?side=${otherSide}`)
                    img.card-flip(src='/static/img/flip.svg')
            .card-next
                a(href='/cards')
                    img(src='/static/img/next.svg')
    script(src='/static/js/app.js')